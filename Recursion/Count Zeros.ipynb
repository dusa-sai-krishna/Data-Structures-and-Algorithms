   "source": [
    "def countz(txt):\n",
    "    if len(txt)==0:\n",
    "        return 0\n",
    "    count=countz(txt[1:])\n",
    "    if txt[0]=='0':\n",
    "        return 1+count\n",
    "    else:\n",
    "        return 0+count\n",
    "    \n",
    "x=int(input())\n",
    "print(countz(str(x)))"
   ]
